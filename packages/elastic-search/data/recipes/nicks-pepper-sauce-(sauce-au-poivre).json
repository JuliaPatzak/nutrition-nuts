    "ingredients": [
        "2 tablespoons butter",
        "\u00bc cup finely minced shallots",
        "6 tablespoons finely chopped fresh parsley",
        "1 tablespoon crushed black pepper",
        "\u00bd teaspoon salt",
        "1 cup cognac",
        "1\u2009\u00bd cups beef stock",
        "6 tablespoons creme fraiche",
        "2 tablespoons butter"
