    "ingredients": [
        "\u00bd cup uncooked white rice",
        "1 cup water",
        "\u00bc cup minced red onion",
        "4 cloves garlic, minced",
        "\u00bc cup butter",
        "1 (6.5 ounce) can minced clams",
        "\u00bd cup corn",
        "2 teaspoons lemon juice",
        "4 (8 ounce) cans tomato sauce",
        "1 teaspoon chopped fresh basil",
        "salt and pepper to taste",
        "1 cup water",
        "1 cup heavy cream"
    ],
    "directions": [
        "In a small saucepan, bring 1 cup water to a boil",
        "Add rice and stir",
        "Reduce heat, cover and simmer for 20 minutes",
        "In a large saucepan or stockpot, saute the onion and garlic in butter until tender",
        "Add clams, corn, lemon juice and tomato sauce",
        "Season with fresh basil and salt and pepper to taste",
        "Stir in remaining cup of water and let the soup simmer for 20 minutes",
        "Remove from heat and stir in the heavy cream and cooked rice until well blended",
        "Serve immediately"
