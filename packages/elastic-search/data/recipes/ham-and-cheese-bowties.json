    "ingredients": [
        "8 ounces farfalle (bow tie) pasta",
        "\u00bc cup butter",
        "1 clove garlic, minced",
        "\u00bc cup all-purpose flour",
        "\u00bd teaspoon salt",
        "\u215b teaspoon ground black pepper",
        "2 cups milk",
        "\u00bd teaspoon prepared mustard",
        "2\u2009\u00bd cups shredded Colby cheese",
        "4 ounces cooked ham, julienned",
        "\u00bc cup grated Parmesan cheese"
    ],
    "directions": [
        "Preheat oven to 350 degrees F (175 degrees C)",
        "Bring a large pot of lightly salted water to a boil",
        "Add pasta and cook for 8 to 10 minutes or until al dente; drain",
        "In a large saucepan over medium heat, melt butter",
        "Saute garlic 30 seconds",
        "Whisk in flour, salt and pepper",
        "Cook and stir until smooth",
        "Pour in milk, a little at a time, stirring constantly",
        "Bring to a boil for 1 minute",
        "Stir in mustard and Colby",
        "Continue to cook, stirring occasionally, until cheese is melted",
        "Remove from heat and stir in pasta and ham",
        "Pour into a 2 quart baking dish",
        "Sprinkle with Parmesan",
        "Bake 20 to 25 minutes, until bubbly and golden"
    ],
