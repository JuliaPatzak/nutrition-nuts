    "ingredients": [
        "4 large ripe tomatoes, sliced",
        "\u00bc cup olive oil",
        "2 tablespoons chopped fresh thyme leaves",
        "2 tablespoons chopped fresh oregano",
        "2 tablespoons chopped fresh parsley",
        "2 tablespoons chopped fresh chives",
        "2 tablespoons minced garlic",
        "\u00bc cup freshly grated Parmesan cheese",
        "salt and ground black pepper to taste"
    ],
    "directions": [
        "Arrange the tomato slices in a shallow casserole dish",
        "Whisk together the olive oil, thyme, oregano, parsley, chives, and garlic in a small bowl",
        "Add salt and pepper to taste",
        "Pour herb mixture over the tomatoes, covering evenly",
        "Top with Parmesan cheese",
        "Cover, and refrigerate at least 1 hour before serving"
    ],
