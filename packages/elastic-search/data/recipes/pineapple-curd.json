    "ingredients": [
        "1\u2009\u00bd cups fresh pineapple chunks",
        "2 large egg yolks",
        "2 tablespoons white sugar",
        "1 tablespoon lemon juice",
        "1 tablespoon cornstarch",
        "1 pinch salt",
        "2 tablespoons unsalted butter"
    ],
    "directions": [
        "Combine pineapple, egg yolks, sugar, lemon juice, cornstarch, and salt in a blender; blend until smooth",
        "Pour into a saucepan and bring to a simmer over medium heat, whisking constantly",
        "Cook and stir until thickened, 3 to 5 minutes",
        "Remove from heat and whisk in butter until fully incorporated",
        "Transfer to a small bowl, cover with plastic wrap, and chill until set, 2 to 3 hours"
    ],
